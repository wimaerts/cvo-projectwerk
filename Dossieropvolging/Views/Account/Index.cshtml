@model Dossieropvolging.ViewModels.BeheerViewModel

@{
    ViewBag.Title = "Gebruikers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gebruikers</h2>

<p>
    @Html.ActionLink("Nieuwe gebruiker aanmaken", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.lstGebruikers.FirstOrDefault().Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lstGebruikers.FirstOrDefault().Voornaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lstGebruikers.FirstOrDefault().Email)
        </th>
    </tr>

    @foreach (var item in Model.lstGebruikers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voornaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
        </tr>
    }

</table>


<h2>Rollen</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.lstRollen.FirstOrDefault().Name)
        </th>
    </tr>

    @foreach (var item in Model.lstRollen)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
    }

</table>